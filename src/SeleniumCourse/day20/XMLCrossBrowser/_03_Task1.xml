<!--    Task 1 Create a xml file which is running Day 5 Specials - Day5 search Function in the firefox and in the chrome  -->

<!-- if parallel is = tests then it will run the first class in both tests  -->
<suite name = "SuiteForCrossBrowser" parallel="tests" thread-count="4">
    <test name = "Firefox">

        <parameter name="browser" value="firefox"></parameter>
        <parameter name="searchItem" value="samsung"></parameter>

        <classes>
            <class name="Day5._02_Specials"></class>
            <class name="Day5._03_SearchFunctionality"></class>
        </classes>
    </test>

    <test name ="chrome">

        <parameter name="browser" value="chrome"></parameter>
        <parameter name="searchItem" value="iPhone"></parameter>
        <classes>
            <class name="Day5._02_Specials"></class>
            <class name="Day5._03_SearchFunctionality"></class>
        </classes>
    </test>

</suite>
